<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="eZ Platform beginner tutorial">

    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css'>

    {% block page_head %}
        <title>{{ title|default('Home') }}</title>
    {% endblock %}

</head>

<body>
<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top" id="total-navbar">
    <div class="container">
        <!-- Brand and toggle -->
        <div class="navbar-header page-scroll">
            <a class="navbar-brand" href="/">
                <img alt="Brand" src="{{ asset('build/images/logo.png') }}">
            </a>
        </div>
    </div>
</nav>
{% block header %}
    {% include '@ezdesign/layout/header.html.twig' %}
{% endblock %}
<section>
    <div class="container">
        <div class="row regular-content-size">
            <div class="col-xs-12 box-style">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </div>
</section>

{% block footer %}
    {% include '@ezdesign/layout/footer.html.twig' %}
{% endblock %}
<script src="{{ asset('build/app.js') }}"></script>
</body>
</html>
